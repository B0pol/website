---
layout: null
---
<?xml version="1.0" encoding="utf-8"?>
<rss version="2.0">
<channel>
<title>NewPipe Blog</title>
<description>The latest blog posts</description>
<link href="{{ site.url }}/" rel="alternate" type="text/html" title="{{ site.title }}" />
{%- for post in site.posts %}{% unless post.draft %} 
<item>
<title>{{ post.title | xml_escape }}</title>
<description>{{ post.content | xml_escape }}</description>
<pubDate>{{ post.date | date_to_xmlschema }}</pubDate>
<author><name>{{ post.author }}</name></author>
{% if post.image %}<enclosure url="{{ site.url }}/img/{{ site.data.images[post.image].url }}" type="image/{{ site.data.images[post.image].type }}" length="{{ site.data.images[post.image].size }}" />{% endif %}
<link href="{{ post.url | prepend: site.url }}" rel="alternate" type="text/html" title="{{ post.title }}" />
<guid isPermaLink="true">{{ post.url | prepend: site.url }}</guid>
</item>
{%- endunless %}{% endfor %} 
</channel>
</rss>
